<% layout('/layouts/boilerplate') -%>
<div>
    <div id="cluster-map"></div>
    </div>

    <main class="container mt-5">
    <h1>All Campgrounds</h1>
    <% for(let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images[0]) {%> 
                    <img src="<%=campground.images[0].url%>" class="img-fluid">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dzre5qhvl/image/upload/v1615991916/Yelpcamp/unnamed_rdld91.png" class="img-fluid">
                        <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small>
                                <%=campground.location%>
                            </small>
                        </p>
                    </div>
                    <a class='btn btn-primary' href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                </div>
            </div>
        </div>
        <% } %>
    </main>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const campgroundsData = {"features":<%-JSON.stringify(campgrounds)%>};
        </script>

        <script src="/javascripts/clusterMap.js"></script>