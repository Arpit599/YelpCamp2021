<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/indexPage.css">

<div class="indexContentHolder container d-flex justify-content-center w-100 h-100 mt-3 mb-3">
    <div class="row w-100">
        <div class="col-8 px-0">
            <div class="h-100" id="cluster-map"></div>
        </div>
        <div class="col-4 px-0">
            <main class="campgroundsContainer h-100">
                <h2 class="indexPageHeading py-3">All Campgrounds</h2>
                <% for(let campground of campgrounds) {%>
                    <div class="card mb-3 ms-3 me-3">
                        <div class="row">
                            <div class="col-md-4">
                                <% if(campground.images[0]) {%>
                                    <img src="<%=campground.images[0].url%>" class="img-fluid">
                                    <% } else { %>
                                        <img src="https://res.cloudinary.com/dzre5qhvl/image/upload/v1615991916/Yelpcamp/unnamed_rdld91.png"
                                            class="img-fluid">
                                        <% } %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=campground.title%>
                                    </h5>
                                    <p class="card-text">
                                        <%=campground.description%>
                                    </p>
                                    <p class="card-text">
                                        <small>
                                            <%=campground.location%>
                                        </small>
                                    </p>
                                    <a class='btn btn-primary' href="/campgrounds/<%=campground._id%>">View
                                        <%=campground.title%>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgroundsData = { "features": <%-JSON.stringify(campgrounds) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>