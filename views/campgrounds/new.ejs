<% layout('/layouts/boilerplate') %>
    <h1 class="text-center">Add Campground</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter title!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter location!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Campground's Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" required>
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter price!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter description!
                    </div>
                </div>
                <div class="input-group mt-4 mb-3">
                    <input type="file" class="form-control" id="imageUpload" multiple>
                    <label class="input-group-text" for="imageUpload">Upload</label>
                </div>
                <button class="btn btn-success">Add campground</button>
                <a href="/campgrounds" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>