    <h1 class="text-center">Edit Campground</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%=campground.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%=campground.location%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        value="<%=campground.image%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Campground's Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" value="<%=campground.price%>">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]"
                        id="description"><%=campground.description%></textarea>
                </div>
                <button class="btn btn-primary">Edit campground</button>
                <a href="/campgrounds" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>